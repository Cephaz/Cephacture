<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<% if current_user %>
  <% if current_user.avatar_url %>
    <img src="<%= current_user.avatar_url %>" alt="User Avatar" style="max-width: 100px; max-height: 100px;">
  <% end %>
  <%= link_to "Edit Account", edit_user_registration_path %>
